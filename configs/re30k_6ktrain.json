{
    "data_name":        "ldc_30k_60ksnaps",

    "latent_type":      "dls",

    "latent_params": {
        "patch_size":   19,
        "num_modes":    5
    },

    "model":            "tr_enc",

    "params": {
        "time_lag":     64,
        "d_model":      512,
        "nhead":        4,
        "num_layers":   4
    },

    "train": {
        "train_split":  0.7,
        "test_split":   0.1,
        "sample_train": 6000,
        "sample_test":  600,
        "lr":           0.001,
        "num_epochs":   1000,
        "patience":     25,
        "train_ahead":  5,
        "batch_size":   256
    },

    "pred_lim":         512,
    
    "predictions": {
        "unseen": {
            "init":     "val",
            "lim":      512
        },
        "validation": {
            "init":     "val",
            "lim":      null
        },
        "seen": {
            "init":     "train",
            "lim":      null
        }
    }
}
